<div class ="container">
  <div class ="row">
    <div class="col-md-10 col-md-offset-1">

<!-- page-header 裡面顯示個人檔案資料 -->
      <div class="page-header">
        <div class="col-md-3 col-sm-4">
          <div class ="text-center">
            <%=image_tag @user.avatar, class:"img-responsive img-rounded" %>
          </div>
        </div>

        <div class ="col-md-9 col-sm-8">
          <h1><%= @user.name %></h1>
          <p><strong><%= @user.email %></strong></p>
          <p><%= simple_format @user.intro %></p>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit', edit_user_path, class:"btn btn-primary" %>
          <% end %>
        </div>
        <div class="clearfix"></div>
      </div>

      <br>

      <div class="panel panel-info">
        <div class="panel-heading">
          <h4 class="panel-title>"<strong><%= @commented_restaurants.count %></strong> 已評論餐廳</h4>
        </div>
        <div class="panel-body">
          <% @commented_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do %>
          <div class="my-restaurant">
            <%= image_tag restaurant.image, class: "img-responsive img-rounded" %>
            <h5><%= restaurant.name %></h5>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
